<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.medicine.medicinespringboot.mapper.TodoMapper">
    <select id="list" resultType="com.medicine.medicinespringboot.pojo.Todo">
        select * from todo
        <where>
            <if test="completed != null">
                and completed = #{completed}
            </if>
            <if test="userId != null">
                and user_id = #{userId}
            </if>
        </where>
        ORDER BY create_time DESC
    </select>
</mapper>