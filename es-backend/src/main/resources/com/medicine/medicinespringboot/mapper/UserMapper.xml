<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.medicine.medicinespringboot.mapper.UserMapper">
    <select id="list" resultType="com.medicine.medicinespringboot.pojo.User">
        select * from users
        <where>
            <if test="name != null">
                and name like concat('%', #{name}, '%')
            </if>
            <if test="status != null">
                and user_status = #{status}
            </if>
        </where>

    </select>
</mapper>
