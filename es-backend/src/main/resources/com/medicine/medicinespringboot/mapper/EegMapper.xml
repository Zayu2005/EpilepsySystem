<mapper namespace="com.medicine.medicinespringboot.mapper.EegMapper">
    <!-- 插入主表数据（eeg_analysis_result） -->
    <insert id="saveAnalysisResult" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO eeg_analysis_result (
            patient_id,
            user_id,
            file_name,
            file_size,
            start_time,
            end_time,
            discharge_count,
            rhythm,
            frequency,
            risk_level
        ) VALUES (
                     #{patientId},
                     #{userId},
                     #{fileName},
                     #{fileSize},
                     #{startTime},
                     #{endTime},
                     #{dischargeCount},
                     #{rhythm},
                     #{frequency},
                     #{riskLevel}
                 )
    </insert>
    <!-- 批量插入异常数据 -->
    <insert id="batchInsertAnomalies">
        INSERT INTO eeg_anomaly (analysis_id, type, severity)
        VALUES
        <foreach collection="anomalies" item="anomaly" separator=",">
            (
            #{anomaly.analysisId},
            #{anomaly.type},
            #{anomaly.severity}
            )
        </foreach>
    </insert>

