    <select id="selectAnalysisResultPage" resultType="com.medicine.medicinespringboot.pojo.EegAnalysisResult">
        SELECT
        ear.*,
        p.name AS patientName,
        u.name AS doctorName,
        ear.create_time -- 明确选择 create_time
        FROM
        eeg_analysis_result ear
        LEFT JOIN
        patient p ON ear.patient_id = p.id
        LEFT JOIN
        users u ON ear.user_id = u.id
        <where>
            <if test="name != null and name != ''">
                p.name LIKE CONCAT('%', #{name}, '%')
                OR u.name LIKE CONCAT('%', #{name}, '%')
            </if>
        </where>
        ORDER BY ear.create_time DESC
    </select>
    <select id="selectAnomaliesByAnalysisId" resultType="com.medicine.medicinespringboot.pojo.Anomaly">
